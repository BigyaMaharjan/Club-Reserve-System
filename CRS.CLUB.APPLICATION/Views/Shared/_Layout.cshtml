    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/Content/assets/js/NotificationMessageToaster.js"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        "primary-100": '#D75A8B',
                        "primary-200": '#FFB6C1',
                        "primary-300": '#18181b',
                        "primary-400": "#667085",
                        "secondary-100": '#333',
                        "secondary-200": '#A1A1AA',
                        "secondary-300": '#7A7A7A',
                        "secondary-400": "#EFF4FB",
                        "secondary-text-1": "#3E3E3E",
                        "secondary-text-2": "#151518",
                        "secondary-color-pink": "#CC527A",
                        "gold": '#E3AB00',
                        "silver": '#A6A6A6',
                        "copper": '#BD764B',
