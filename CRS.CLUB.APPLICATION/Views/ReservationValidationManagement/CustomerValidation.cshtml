@{
    ViewBag.Title = "Customer Validation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="flex flex-col gap-[32px] pb-4">
    <!-- booking information  -->
    <div class="title-info grid gap-[20px]">
        <div>
            <div class="heading-title">Customer Validation</div>
            <div class="span-title-light-gray">
                Validate Customer’s Reservation by entering OTP code that has been sent
                to email address.
            </div>
        </div>
    </div>
    <div class="px-[32px]">
        @using (Html.BeginForm("CustomerValidationConfirmation", "ReservationValidationManagement", FormMethod.Get, new { @role = "form", @id = "MyForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="w-[400px] pb-[16px]">
                <div class="input-field-common">
                    <input type="text" id="OTPCode" , name="OTPCode" class=" w-full" placeholder="Enter OTP from Customer" required>
                </div>
            </div>
            <div class="flex gap-[16px]">
                <button class="btn btn-primary" onclick="SubmitFunction()">Continue</button>
            </div>
        }
    </div>
</div>
@section scripts
{
    <script>
        function SubmitFunction() {
            document.getElementById('MyForm').submit();
        };
    </script>
}
